# Výpočet přestupných roků

year = int(input("Zadejte rok :\n"))

if year % 4 == 0 :
    if year % 100 == 0 :
        if year % 400 == 0:
            print("Je to přestupový rok.")

        else :
            print("Není to přestupný rok.")    
    
    else :
        print("Je to přestupný rok.")


else :
    print("Není to přestupný rok.")
